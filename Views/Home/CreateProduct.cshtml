@{
    // Layout = "~/Views/Shared/Tam_Layout.cshtml";
}

@model Product
<div class="ms-2 mx-2">
    <h1>Create</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Learner" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" placeholder="ID" />
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UnitPrice" class="form-control" placeholder="UnitPrice" />
            </div>
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Image" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Image" class="form-control" placeholder="Image" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Available" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Available" class="form-control" placeholder="Available" />
            </div>
            <span asp-validation-for="Available" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="custom-select mr-sm-2"
                        asp-items="@ViewBag.CategoryId"></select>
            </div>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>


        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="ProviderId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="ProviderId" class="custom-select mr-sm-2" asp-items="@ViewBag.ProviderId"></select>
            </div>
            <span asp-validation-for="ProviderId" class="text-danger"></span>
        </div>

        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" asp-controller="Home" asp-action="CreateProduct" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>